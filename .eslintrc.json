{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react", "react-hooks"],
  "rules": {
    "no-unused-vars": "error", // unused variable
    "no-undef": "error", // undefined vars (like missing imports)
    "react-hooks/rules-of-hooks": "error", // hook rules
    "react-hooks/exhaustive-deps": "warn" // effect deps
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
